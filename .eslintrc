{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "semi": 0, // 行末分号，根据编码习惯选择添加，这里配置的不加分号
    "no-console": 0, //删除console
    "comma-dangle": [
      2,
      "always-multiline"
    ], //要求或禁止使用拖尾逗号
    "max-len": 0, //强制行的最大长度
    "space-before-function-paren": [
      0,
      "always"
    ], //要求或禁止函数圆括号之前有一个空格
    "no-unused-expressions": [
      0,
      {
        "allowShortCircuit": true,
        "allowTernary": true
      }
    ], //禁止未使用过的表达式
    "arrow-body-style": [
      0,
      "as-needed"
    ], //要求箭头函数体使用大括号
    "func-names": 0, //要求或禁止命名的 function 表达式
    "prefer-const": 0, //建议使用const
    "no-extend-native": 0, //禁止扩展原生对象
    "no-param-reassign": 0, //禁止对函数参数再赋值
    "no-restricted-syntax": 0, //禁止使用特定的语法
    "no-eval": 0, //禁用 eval()
    "no-continue": 0, //禁用 continue
    "no-unused-vars": [
      0,
      {
        "ignoreRestSiblings": true
      }
    ], //禁止未使用过的变量
    "no-underscore-dangle": 0,//禁止标识符中有悬空下划线
    "global-require": 0,//强制在模块顶部调用 require()
    "import/no-extraneous-dependencies": 0,
    "import/prefer-default-export": 0,
    "import/no-unresolved": 0,
    "import/extensions": 0,
    // react
    "react/jsx-first-prop-new-line": 0,
    "react/jsx-filename-extension": 0,
    "react/jsx-no-bind": 0,
    "react/no-array-index-key": 0,
    "react/require-default-props": 0,
    "react/forbid-prop-types": 0,
    "react/no-string-refs": 0,
    "react/no-find-dom-node": 0,
    "react/no-danger": 0,
    "react/prop-types": 0,
    "react/display-name": 0,
    "react/no-deprecated": 0,
    "react/no-direct-mutation-state": 0,
    "jsx-a11y/href-no-hash": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "prettier/prettier": 2
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "settings": {
    "import/resolver": "node"
  }
}